{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@playwright/test"],// Playwrightの型定義を追加
    "jsx": "react",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true // または "emitDeclarationOnly": true
    
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/**/*.tsx", "tests/**/*.tsx"],  
  "exclude": ["node_modules", "lib", "dist"]
}
